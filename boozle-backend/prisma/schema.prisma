generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DailyCocktail {
  id           Int      @id @default(autoincrement())
  date         DateTime @unique
  cocktailData String
  guesses      Guess[]
  clues        Clue[]
}

model Clue {
  clueId        Int           @id @default(autoincrement())
  sessionId     String
  revealedAt    DateTime      @default(now())
  cocktailId    Int
  dailyCocktail DailyCocktail @relation(fields: [cocktailId], references: [id])
}

model Guess {
  guessId       Int           @id @default(autoincrement())
  sessionId     String
  guess         String
  isCorrect     Boolean
  cocktailId    Int
  dailyCocktail DailyCocktail @relation(fields: [cocktailId], references: [id])
}
