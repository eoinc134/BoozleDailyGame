generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DailyCocktail {
  id           Int      @id @unique(map: "id") @default(autoincrement())
  date         DateTime @unique(map: "date") @db.Date
  cocktailData String
  clues        Clue[]
  guesses      Guess[]
}

model Clue {
  clueId        String         @id @unique(map: "clueId") @db.Uuid
  sessionId     String
  revealedAt    DateTime       @db.Time(6)
  cocktailId    Int?
  dailyCocktail DailyCocktail? @relation(fields: [cocktailId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "cocktailId")
}

model Guess {
  guessId       String        @id @db.Uuid
  sessionId     String
  guess         String
  isCorrect     Boolean
  cocktailId    Int
  dailyCocktail DailyCocktail @relation(fields: [cocktailId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "cocktailId")
}
